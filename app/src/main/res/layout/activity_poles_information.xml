<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".poles_information_activity">


   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


      <include
          android:id="@+id/toolbar"
          layout="@layout/rf_polesinfo2" />

      <TextView
          android:id="@+id/Sensorvalue_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/andika_new_basic"
          android:gravity="center"
          android:padding="10dp"
          android:text="Sensor value 1: "
          android:textColor="@color/black"
          android:textSize="23sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/toolbar" />


      <TextView
          android:id="@+id/sv_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/andika_new_basic"
          android:gravity="center"
          android:padding="10dp"
          android:textColor="@color/black"
          android:textSize="23sp"
          app:layout_constraintStart_toEndOf="@+id/Sensorvalue_1"
          app:layout_constraintTop_toBottomOf="@+id/toolbar" />


      <TextView
          android:id="@+id/Sensorvalue_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/andika_new_basic"
          android:gravity="center"
          android:padding="10dp"
          android:text="Sensor value 2: "
          android:textColor="@color/black"
          android:textSize="23sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/Sensorvalue_1" />


      <TextView
          android:id="@+id/sv_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/andika_new_basic"
          android:gravity="center"
          android:padding="10dp"
          android:textColor="@color/black"
          android:textSize="23sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/Sensorvalue_1"
          app:layout_constraintTop_toBottomOf="@+id/sv_1" />


   </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>